<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="ragus.lienty.fromscratch.Characters">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:text="Characters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:id="@+id/tcharacters" />

        <ImageView
            android:layout_width="120dp"
            android:id="@+id/avatar"
            android:layout_height="120dp"
            android:src="@drawable/penix_mobile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skillPoint"
            android:text="SP : "
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignBottom="@+id/isk"
            android:layout_alignLeft="@id/tcharacters"/>
        <TextView
            android:text="ISK : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isk"
            android:textSize="20dp"
            android:layout_alignStart="@+id/tcharacters"
            android:layout_alignBottom="@id/avatar"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Date of Birth : "
            android:textSize="20dp"
            android:layout_alignBottom="@id/avatar"
            android:layout_alignLeft="@id/tcharacters"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@android:dimen/app_icon_size"
            android:text="Skill Queue"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tSkillQueue"
            android:layout_marginBottom="131dp"
            android:layout_above="@+id/tNotifications"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp" />


        <TextView
            android:text="Notifications"
            android:textAlignment="center"
            android:textSize="@android:dimen/app_icon_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tNotifications"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_alignParentStart="true" />




    </RelativeLayout>


</FrameLayout>

