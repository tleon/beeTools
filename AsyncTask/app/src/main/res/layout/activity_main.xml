<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ragus.lienty.asynctask.MainActivity">

    <EditText
        android:hint="API Key"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/keyField" />
    <EditText
        android:hint="Verification Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keyField"
        android:id="@+id/vCodeField"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Service"
        android:layout_below="@+id/vCodeField"
        android:id="@+id/syncBTN"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheat API"
        android:layout_marginLeft="10dp"
        android:id="@+id/cheatBtn"
        android:layout_alignTop="@+id/syncBTN"
        android:layout_toRightOf="@+id/syncBTN"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Service"
        android:id="@+id/loadBtn"
        android:layout_below="@+id/syncBTN"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/loadBtn"
        android:layout_marginLeft="15dp"
        android:text="Check Status"
        android:layout_alignBottom="@+id/loadBtn"
        android:id="@+id/statusBtn"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_below="@+id/loadBtn"
        android:layout_marginTop="15dp"
        android:text="Save Api infos in Internal Memory"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/checkBox"
        android:scrollbars = "vertical"
        android:id="@+id/syncTxtView"/>

</RelativeLayout>
